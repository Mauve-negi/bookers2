<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      
      <%= form_with model: @user do |f| %>
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName" %><br>
        <br>
        <label for="inputImage">ProfileImage</label><br>
        <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %>  <br>
        <br>
        <label for="inputIntroduction">Introduction</label><br>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %><br>
        <br>        
        <%= f.submit "Update User" %>
      <% end %>
      
    </div>
  </div>
  
</div>