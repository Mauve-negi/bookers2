<h2>User info</h2>

<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th> <%= user.name %> </th>
    </tr>
    <tr>
      <th>introduction</th>
      <th> <%= user.introduction %> </th>
    </tr>
  </tbody>
</table>

<%= button_to edit_user_path(user),class: "btn btn-outline-secondary btn-block", method: :get  do %>
  <i class="fas fa-user-cog" style="color: #e3e3e3;"></i> user edit
<% end %> 

<h2 class="mt-3">New Book</h2>

<%= form_with model: book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_area :body %>
  <%= f.submit 'CreateBook' %>
<% end %>